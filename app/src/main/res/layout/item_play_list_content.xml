<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_playlist_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_dimen_5dp"
    android:elevation="@dimen/common_dimen_15dp"
    android:foreground="@drawable/ripple_effect_fff48fb1"
    android:translationZ="@dimen/common_dimen_3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_play_list_thumbnail"
            android:layout_width="@dimen/common_dimen_100dp"
            android:layout_height="@dimen/common_dimen_60dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/common_dimen_5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_play_list_item_name"
            style="@style/TextFFFFFFFFSmall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimen_48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_dimen_5dp"
            android:layout_toRightOf="@+id/img_play_list_thumbnail"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            tools:text="Isaac Albéniz: Cantos de España Op. 232 (1898)Isaac Albéniz: Cantos de España Op. 232 (1898)Isaac Albéniz: Cantos de España Op. 232 (1898)Isaac Albéniz: Cantos de España Op. 232 (1898)" />
    </RelativeLayout>
</android.support.v7.widget.CardView>