<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="@dimen/common_dimen_10dp">

    <com.google.android.youtube.player.YouTubeThumbnailView
        android:id="@+id/yttv_play_list_thumbnail"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/common_dimen_10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_play_list_item_name"
        style="@style/TextFFFFFFFFMedium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/yttv_play_list_thumbnail"
        android:ellipsize="end"
        android:gravity="center_vertical"
        tools:text="Isaac Albéniz: Cantos de España Op. 232 (1898)" />
</RelativeLayout>