<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_about_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/main.toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main.imageview.back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ripple_effect_fff48fb1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_arrow_back" />

                <TextView
                    android:id="@+id/main.textview.title"
                    style="@style/TextFFFFFFFFLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_dimen_8dp"
                    android:gravity="center_vertical"
                    android:text="關於Cadenza"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_about_cadenza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_dimen_10dp"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect_fff48fb1"
                app:cardCornerRadius="@dimen/common_dimen_1dp"
                app:cardElevation="@dimen/common_dimen_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFFFF"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_about_cadenza_header"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/img_about_cadenza_photo"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="105dp"
                            android:background="@drawable/border_ff000000_accent_background" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="158dp"
                            android:layout_toRightOf="@id/img_about_cadenza_photo"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_about_cadenza_name"
                                style="@style/TextFF000000Large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/app_name"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_about_cadenza_role"
                                style="@style/TextFF000000Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/app_role" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text_about_cadenza_description"
                        style="@style/TextFF000000Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_dimen_20dp"
                        android:layout_marginRight="@dimen/common_dimen_20dp"
                        android:layout_marginTop="@dimen/common_dimen_20dp"
                        android:text="@string/app_description" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_dimen_10dp">

                        <TextView
                            android:id="@+id/text_about_cadenza_version"
                            style="@style/TextFF000000Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple_effect_fff48fb1"
                            android:clickable="true"
                            android:padding="@dimen/common_dimen_10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
