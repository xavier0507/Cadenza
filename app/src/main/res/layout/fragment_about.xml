                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_dimen_10dp"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect_fff48fb1"
                app:cardCornerRadius="@dimen/common_dimen_1dp"
                app:cardElevation="@dimen/common_dimen_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_55303030"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextFFFFFFFFMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/common_dimen_16dp"
                        android:paddingTop="@dimen/common_dimen_16dp"
                        android:text="@string/app_about_thanks_title"
                        android:textStyle="bold" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/common_dimen_10dp"
                        android:paddingEnd="@dimen/common_dimen_20dp"
                        android:paddingStart="@dimen/common_dimen_20dp">

                        <TextView
                            style="@style/TextFFFFFFFFSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_dimen_8dp"
                            android:text="@string/app_about_thanks_iron" />

                        <TextView
                            style="@style/TextFFFFFFFFSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_dimen_8dp"
                            android:text="@string/app_about_thanks_users" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
