                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="105dp"
                            app:civ_border_width="1dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="158dp"
                            android:layout_toRightOf="@id/img_about_jim_photo"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_about_jim_name"
                                style="@style/TextFFFFFFFFMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jim Hsieh"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_about_jim_role"
                                style="@style/TextFFFFFFFFSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product Manager" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text_about_jim_description"
                        style="@style/TextFFFFFFFFSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/common_dimen_20dp"
                        android:layout_marginLeft="@dimen/common_dimen_20dp"
                        android:layout_marginRight="@dimen/common_dimen_20dp"
                        android:layout_marginTop="@dimen/common_dimen_20dp"
                        android:text="@string/app_about_jim" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/common_dimen_10dp">

                        <TextView
                            android:id="@+id/text_about_jim_email"
                            style="@style/TextFFFFFFFFMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple_effect_fff48fb1"
                            android:clickable="true"
                            android:padding="@dimen/common_dimen_10dp"
                            android:text="@string/app_action_contacts"
                            android:textStyle="bold" />

                        <!--<TextView-->
