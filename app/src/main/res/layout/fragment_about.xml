                        <!--android:clickable="true"-->
                        <!--android:padding="@dimen/common_dimen_10dp"-->
                        <!--android:text="GITHUB" />-->
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_about_jim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_dimen_10dp"
                android:clickable="true"
                android:foreground="@drawable/ripple_effect_fff48fb1"
                app:cardCornerRadius="@dimen/common_dimen_1dp"
                app:cardElevation="@dimen/common_dimen_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FF303030"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
